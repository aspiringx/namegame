{
  "name": "namegame-monorepo",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter web dev:mobile",
    "dev:worker": "pnpm --filter worker dev",
    "dev:chat": "pnpm --filter chat dev",
    "build": "pnpm --filter web build",
    "build:all": "pnpm -r build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --filter web lint",
    "lint:fix": "pnpm --filter web lint:fix",
    "test": "pnpm --filter web test",
    "test:watch": "pnpm --filter web test:watch",
    "db:generate": "pnpm --filter @namegame/db db:generate",
    "db:push": "pnpm --filter @namegame/db db:push",
    "db:migrate": "pnpm --filter @namegame/db db:migrate",
    "db:studio": "pnpm --filter @namegame/db db:studio",
    "db:seed": "pnpm --filter @namegame/db db:seed",
    "seed:local": "pnpm --filter @namegame/db -- ts-node --project prisma/tsconfig.json prisma/local-test-seed.ts",
    "seed:family": "pnpm --filter @namegame/db -- ts-node --project prisma/tsconfig.json prisma/seeds/family-group-seeder.ts",
    "email-preview": "pnpm --filter web email-preview"
  },
  "devDependencies": {
    "typescript": "^5.5"
  }
}
